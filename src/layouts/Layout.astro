---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Web BLE Capture" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <header class="bg-white border-b border-slate-200 sticky top-0 z-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16 items-center">
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-brand-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M7 7l10 10-5 5V2l5 5L7 17"></path>
                        </svg>
                        <h1 class="text-xl font-bold text-slate-900 tracking-tight">Web BLE Capture</h1>
                    </div>
                    <nav class="flex gap-4">
                        <a href="https://github.com/gyokojp" target="_blank" rel="noopener noreferrer" class="text-slate-500 hover:text-slate-700 transition-colors">
                            GitHub
                        </a>
                    </nav>
                </div>
            </div>
        </header>
        <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    		<slot />
        </main>
	</body>
</html>
